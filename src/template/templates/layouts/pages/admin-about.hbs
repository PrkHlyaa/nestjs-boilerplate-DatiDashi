<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{title}} - {{name}}</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    html, body {
      overflow: hidden;
      margin: 0;
      padding: 0;
    }

    .admin-container {
      display: flex;
      height: 100vh;
      width: 100vw;
      overflow: hidden;
    }

    .sidebar-scroll {
      width: 256px;
      height: 100vh;
      overflow-y: auto;
      overflow-x: hidden;
      flex-shrink: 0;
    }

    .main-content-wrapper {
      flex: 1;
      display: flex;
      flex-direction: column;
      overflow: hidden;
      min-width: 0;
    }

    .main-content {
      flex: 1;
      overflow-y: auto;
      overflow-x: hidden;
    }
    
    .sidebar-scroll::-webkit-scrollbar,
    .main-content::-webkit-scrollbar {
      width: 6px;
    }
    
    .sidebar-scroll::-webkit-scrollbar-track,
    .main-content::-webkit-scrollbar-track {
      background: #1e293b;
    }
    
    .sidebar-scroll::-webkit-scrollbar-thumb,
    .main-content::-webkit-scrollbar-thumb {
      background: #475569;
      border-radius: 3px;
    }
    
    .sidebar-scroll::-webkit-scrollbar-thumb:hover,
    .main-content::-webkit-scrollbar-thumb:hover {
      background: #64748b;
    }

    .main-content::-webkit-scrollbar-track {
      background: #f1f5f9;
    }
  </style>
</head>
<body class="bg-gray-50">
  <div class="admin-container">
    {{> admin-sidebar active="about"}}

    <div class="main-content-wrapper">
      <header class="flex-shrink-0 bg-white shadow-sm border-b border-gray-200">
        <div class="flex items-center justify-between px-8 py-4">
          <div>
            <h2 class="text-2xl font-bold text-gray-800">{{title}}</h2>
            <p class="text-sm text-gray-600 mt-1">Manage about sections of your website</p>
          </div>
          <button onclick="openCreateModal()" class="bg-blue-600 hover:bg-blue-700 text-white px-5 py-2.5 rounded-lg shadow-md transition flex items-center">
            <i class="fas fa-plus mr-2"></i>
            Add About Section
          </button>
        </div>
        <!-- Auth Warning Banner -->
        <div id="authWarning" class="hidden bg-yellow-50 border-l-4 border-yellow-400 px-8 py-3">
          <div class="flex items-center">
            <i class="fas fa-exclamation-triangle text-yellow-400 mr-3"></i>
            <div>
              <p class="text-sm text-yellow-800 font-semibold">Authentication Required</p>
              <p class="text-xs text-yellow-700">You need to <a href="/login" class="underline font-semibold">login</a> to create, update, or delete content.</p>
            </div>
          </div>
        </div>
      </header>

      <main class="main-content p-8 pb-16">
        <div class="space-y-4">
          {{#each about}}
          <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6 hover:shadow-lg transition">
            <div class="flex justify-between items-start">
              <div class="flex-1">
                <div class="flex items-center mb-3">
                  <span class="text-xs bg-purple-100 text-purple-800 px-3 py-1 rounded-full font-semibold mr-2">
                    <i class="fas fa-sort-numeric-down mr-1"></i>
                    Urutan {{this.order}}
                  </span>
                  <span class="text-xs bg-blue-100 text-blue-800 px-3 py-1 rounded-full font-semibold mr-2">{{this.section}}</span>
                  {{#if this.isActive}}
                  <span class="text-xs bg-green-100 text-green-800 px-3 py-1 rounded-full font-semibold flex items-center">
                    <i class="fas fa-check-circle mr-1"></i>
                    Active
                  </span>
                  {{else}}
                  <span class="text-xs bg-red-100 text-red-800 px-3 py-1 rounded-full font-semibold flex items-center">
                    <i class="fas fa-times-circle mr-1"></i>
                    Inactive
                  </span>
                  {{/if}}
                </div>
                <h3 class="text-xl font-bold text-gray-800 mb-2">{{this.title}}</h3>
                <p class="text-gray-600 leading-relaxed">{{this.description}}</p>
              </div>
              <div class="flex space-x-2 ml-4">
                <button onclick="editAbout('{{this.id}}')" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2.5 rounded-lg transition">
                  <i class="fas fa-edit"></i>
                </button>
                <button onclick="deleteAbout('{{this.id}}', '{{this.title}}')" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2.5 rounded-lg transition">
                  <i class="fas fa-trash"></i>
                </button>
              </div>
            </div>
          </div>
          {{else}}
          <div class="text-center py-16">
            <i class="fas fa-info-circle text-gray-300 text-6xl mb-4"></i>
            <p class="text-gray-500 text-lg mb-2">No about sections found</p>
            <p class="text-gray-400 text-sm">Click "Add About Section" to create one</p>
          </div>
          {{/each}}
        </div>
      </main>
    </div>
  </div>

  <!-- Modal -->
  <div id="aboutModal" class="hidden fixed inset-0 bg-black bg-opacity-50 modal-backdrop overflow-y-auto h-full w-full z-50">
    <div class="relative top-20 mx-auto p-6 border-0 w-11/12 md:w-2/3 shadow-2xl rounded-xl bg-white">
      <div class="flex justify-between items-center mb-5">
        <h3 class="text-xl font-bold text-gray-900" id="modalTitle">
          <i class="fas fa-info-circle text-blue-600 mr-2"></i>
          Add About Section
        </h3>
        <button onclick="closeModal()" class="text-gray-400 hover:text-gray-600 hover:bg-gray-100 rounded-full p-2 transition">
          <i class="fas fa-times text-lg"></i>
        </button>
      </div>
      
      <form id="aboutForm" onsubmit="saveAbout(event)" class="space-y-4">
        <input type="hidden" id="aboutId">
        
        <div>
          <label class="block text-gray-700 text-sm font-semibold mb-2">
            <i class="fas fa-heading text-blue-600 mr-1"></i>
            Title <span class="text-red-500">*</span>
          </label>
          <input type="text" id="aboutTitle" required minlength="3"
            class="border border-gray-300 rounded-lg w-full py-2.5 px-3 text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
          <p class="text-xs text-gray-500 mt-1">Minimum 3 characters</p>
        </div>
        
        <div>
          <label class="block text-gray-700 text-sm font-semibold mb-2">
            <i class="fas fa-align-left text-blue-600 mr-1"></i>
            Description <span class="text-red-500">*</span>
          </label>
          <textarea id="aboutDescription" required rows="4" minlength="10"
            class="border border-gray-300 rounded-lg w-full py-2.5 px-3 text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none"></textarea>
          <p class="text-xs text-gray-500 mt-1">Minimum 10 characters</p>
        </div>
        
        <div class="grid grid-cols-1 gap-4">
          <div>
            <label class="block text-gray-700 text-sm font-semibold mb-2">
              <i class="fas fa-layer-group text-blue-600 mr-1"></i>
              Section <span class="text-red-500">*</span>
            </label>
            <select id="aboutSection" required
              class="border border-gray-300 rounded-lg w-full py-2.5 px-3 text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
              <option value="about">About (Urutan 1)</option>
              <option value="vision">Vision (Urutan 2)</option>
              <option value="mission">Mission (Urutan 3)</option>
              <option value="history">History (Urutan 4)</option>
              <option value="values">Values (Urutan 5)</option>
            </select>
            <p class="text-xs text-gray-500 mt-1">Urutan akan otomatis sesuai section yang dipilih</p>
          </div>
        </div>
        
        <!-- Hidden order field - auto-calculated by JavaScript -->
        <input type="hidden" id="aboutOrder" value="0">
        
        <!-- Image Upload/URL Toggle -->
        <div>
          <label class="block text-gray-700 text-sm font-semibold mb-3">
            <i class="fas fa-image text-blue-600 mr-1"></i>
            Image
          </label>
          
          <!-- Toggle Buttons -->
          <div class="flex gap-2 mb-3">
            <button type="button" onclick="toggleImageMode('url')" 
              id="btnUrlMode"
              class="flex-1 py-2.5 px-4 rounded-lg border-2 border-blue-600 bg-blue-600 text-white font-semibold transition">
              <i class="fas fa-link mr-2"></i>URL
            </button>
            <button type="button" onclick="toggleImageMode('upload')" 
              id="btnUploadMode"
              class="flex-1 py-2.5 px-4 rounded-lg border-2 border-gray-300 bg-white text-gray-700 font-semibold hover:bg-gray-50 transition">
              <i class="fas fa-upload mr-2"></i>Upload
            </button>
          </div>
          
          <!-- URL Input -->
          <div id="urlInputSection">
            <input type="text" id="aboutImageUrl" placeholder="https://example.com/image.jpg"
              class="border border-gray-300 rounded-lg w-full py-2.5 px-3 text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            <p class="text-xs text-gray-500 mt-1">
              <i class="fas fa-info-circle mr-1"></i>
              Paste image URL from Unsplash, Imgur, etc.
            </p>
          </div>
          
          <!-- Upload Input -->
          <div id="uploadInputSection" class="hidden">
            <div class="border-2 border-dashed border-gray-300 rounded-lg p-6 text-center hover:border-blue-500 transition">
              <input type="file" id="aboutImageFile" accept="image/*" 
                onchange="handleImageUpload(event)"
                class="hidden">
              <label for="aboutImageFile" class="cursor-pointer">
                <i class="fas fa-cloud-upload-alt text-4xl text-gray-400 mb-2"></i>
                <p class="text-sm text-gray-600 font-semibold">Click to upload image</p>
                <p class="text-xs text-gray-500 mt-1">PNG, JPG, WEBP up to 5MB</p>
              </label>
            </div>
            <!-- Preview -->
            <div id="imagePreview" class="hidden mt-3">
              <img id="previewImg" src="" alt="Preview" class="w-full h-48 object-cover rounded-lg border border-gray-300">
              <button type="button" onclick="removeUploadedImage()" 
                class="mt-2 text-sm text-red-600 hover:text-red-700 font-semibold">
                <i class="fas fa-times-circle mr-1"></i>Remove image
              </button>
            </div>
          </div>
        </div>
        
        <div class="flex items-center p-3 bg-gray-50 rounded-lg">
          <input type="checkbox" id="aboutIsActive" checked class="mr-3 w-4 h-4 text-blue-600 focus:ring-2 focus:ring-blue-500">
          <label for="aboutIsActive" class="text-gray-700 text-sm font-semibold cursor-pointer">
            <i class="fas fa-toggle-on text-blue-600 mr-1"></i>
            Active
          </label>
        </div>
        
        <div class="flex items-center justify-end space-x-3 pt-4 border-t border-gray-200">
          <button type="button" onclick="closeModal()" 
            class="bg-gray-500 hover:bg-gray-600 text-white font-semibold py-2.5 px-5 rounded-lg transition">
            <i class="fas fa-times mr-1"></i>
            Cancel
          </button>
          <button type="submit" 
            class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2.5 px-5 rounded-lg shadow-md transition">
            <i class="fas fa-save mr-1"></i>
            Save Section
          </button>
        </div>
      </form>
    </div>
  </div>

  <script src="/js/admin-about.js"></script>
</body>
</html>
